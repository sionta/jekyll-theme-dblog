# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = unset
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.sh]
end_of_line = lf
indent_size = 4

[*.{bat,cmd,ps1}]
indent_size = 4
end_of_line = crlf
